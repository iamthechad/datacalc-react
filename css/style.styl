// Import all partials
@require './_*.styl'

header.top
  text-align center
  h1
    font-size 2rem
    display flex
    justify-content center

.content
  display flex
  min-height 100vh
  flex-direction column

.data-calc
  display flex
  height 85vh
  max-width 1500px
  margin-bottom 5vh
  justify-content center
  flex 1
  & > *
    padding 1rem
    border 1rem double lighten(black,10%)
    position relative
    background white
    box-shadow 0px 5px 5px rgba(0,0,0,0.1)
    overflow scroll
    &:first-child
      flex-shrink 1 // take 4x the extra room
      flex-basis 30%
    &:nth-child(2)
      border-left 0
      border-right 0
      min-width 300px
    &:last-child
      flex-shrink 1 // take 4x the extra room
      flex-basis 30%

.catalog
  .selected
    background #c6ffbf

.category
  border-bottom 1px solid black
  padding 1.6em 0
  display flex
  font-size 1.4em
  justify-content space-between
  align-items center
  cursor pointer

.disabled
  pointer-events none
  opacity 0.5
  background #CCC

.item
  margin-bottom 20px
  max-width 500px
  border 1px solid black
  overflow hidden
  display flex
  flex-wrap wrap
  .item-name
    width 75%
    border 1px solid black
  .item-price
    width 25%
    text-align right
    border 1px solid black
  .item-desc
    width 100%
    border 1px solid black
  .item-source-name
    width 30%
    border 1px solid black
  .item-source
    width 70%
    text-align right
    border 1px solid black
  button
    width 100%
    border none

.order
  .order-category
    font-size 1em
    font-weight 600
    .order-items
      padding-left 5px
      list-style-position inside
      font-weight normal
  &:hover
    // padding 1rem 0
    button
      display inline
  button
    border 0
    display none
    line-height 1
    padding 0
  li
    &.total
      font-weight 600
      border-bottom 3px solid black
      border-top 3px double black

button
  text-transform uppercase
  background none
  border 1px solid black
  font-weight 600
  font-size 1rem
  font-family 'Open Sans'
  position relative
  z-index 2
  &:after
    content ''
    z-index -1
    display block
    background black
    position absolute
    width 100%
    height 0%
    left 0
    top 0
    transition all 0.2s
  &:hover, &:focus
    color white
    outline 0
    &:after
      height 100%
ul
  list-style none
  margin 0
  padding 0