@import url('https://fonts.googleapis.com/css?family=Roboto:400,300,500,700')

// Import all partials
@require './_*.styl'

.data-calc
  font-family 'Roboto', sans-serif
  display flex
  height 90vh
  max-width 1500px
  margin-bottom 5vh
  justify-content center
  flex 1
  & > *
    position relative
    background white
    box-shadow 0px 5px 5px rgba(0,0,0,0.1)
    overflow scroll
    &:first-child
      flex-shrink 1 // take 4x the extra room
      flex-basis 30%
    &:nth-child(2)
      border-left 0
      border-right 0
      min-width 300px
    &:last-child
      flex-shrink 1 // take 4x the extra room
      flex-basis 30%

.disabled
  pointer-events none
  opacity 0.5
  background #CCC