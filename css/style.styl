@import url('https://fonts.googleapis.com/css?family=Roboto:400,300,500,700')

// Import all partials
@require './_*.styl'

header.top
  text-align center
  h1
    font-size 2rem
    display flex
    justify-content center

.content
  display flex
  min-height 100vh
  flex-direction column

.data-calc
  font-family 'Roboto', sans-serif
  display flex
  height 85vh
  max-width 1500px
  margin-bottom 5vh
  justify-content center
  flex 1
  & > *
    padding 1rem
    border 1rem double lighten(black,10%)
    position relative
    background white
    box-shadow 0px 5px 5px rgba(0,0,0,0.1)
    overflow scroll
    &:first-child
      flex-shrink 1 // take 4x the extra room
      flex-basis 30%
    &:nth-child(2)
      border-left 0
      border-right 0
      min-width 300px
    &:last-child
      flex-shrink 1 // take 4x the extra room
      flex-basis 30%

.catalog
  .selected
    background #c6ffbf

.category
  border-bottom 1px solid black
  padding 1.6em 0
  display flex
  font-size 1.4em
  justify-content space-between
  align-items center
  cursor pointer

.disabled
  pointer-events none
  opacity 0.5
  background #CCC

.order
  .order-category
    font-size 1em
    font-weight 600
    .order-items
      padding-left 5px
      list-style-position inside
      font-weight normal
  &:hover
    // padding 1rem 0
    button
      display inline
  button
    border 0
    display none
    line-height 1
    padding 0
  li
    &.total
      font-weight 600
      border-bottom 3px solid black
      border-top 3px double black

ul
  list-style none
  margin 0
  padding 0